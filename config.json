{
  "name": "ONVIF Voice Assistant",
  "version": "1.0.0",
  "slug": "onvif_voice_assistant",
  "description": "Voice recognition from ONVIF camera using Wyoming Faster Whisper",
  "url": "https://github.com/SEU-USUARIO/onvif-voice-assistant",
  "arch": ["aarch64", "amd64", "armhf", "armv7", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "map": ["config:rw"],
  "options": {
    "wyoming_host": "localhost",
    "wyoming_port": 10300,
    "rtsp_url": "rtsp://admin:password@192.168.1.100:554/stream",
    "sample_rate": 16000,
    "channels": 1,
    "chunk_duration": 2.0,
    "vad_enabled": true,
    "vad_threshold": 0.5,
    "commands": [
      {
        "pattern": "ligar a luz",
        "action": "light.turn_on",
        "entity_id": "light.sala"
      }
    ],
    "log_level": "info"
  },
  "schema": {
    "wyoming_host": "str",
    "wyoming_port": "port",
    "rtsp_url": "str",
    "sample_rate": "int",
    "channels": "int",
    "chunk_duration": "float",
    "vad_enabled": "bool",
    "vad_threshold": "float(0,1)",
    "commands": [
      {
        "pattern": "str",
        "action": "str",
        "entity_id": "str?",
        "service_data": "str?"
      }
    ],
    "log_level": "list(debug|info|warning|error)"
  },
  "homeassistant_api": true
}
